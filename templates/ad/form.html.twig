{% extends 'base.html.twig' %}

{% block title %}Creating Ad{% endblock %}

{% block body %}

    <div class="container">
        <h2>Ad</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="textarea">{{ form_label(form.name) }}</label><br>
                {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.text) }}</label><br>
                {{ form_widget(form.text) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.status) }}</label><br>
                {{ form_widget(form.status) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.address) }}</label><br>
                {{ form_widget(form.address) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.owner_number) }}</label><br>
                {{ form_widget(form.owner_number) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.county) }}</label><br>
                {{ form_widget(form.county) }}
            </div>

            <div class="form-group">
                <label for="textarea">{{ form_label(form.city) }}</label><br>
                {{ form_widget(form.city) }}
            </div>

            <button type="submit">Save</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}